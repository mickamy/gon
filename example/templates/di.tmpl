package di

import (
	"github.com/google/wire"

	"{{.DomainPackage}}/handler"
	"{{.DomainPackage}}/repository"
	"{{.DomainPackage}}/usecase"
)

type Repositories struct {
	{{range .Repositories}}{{.Name}}
	{{end}}
}

//lint:ignore U1000 used by wire
var RepositorySet = wire.NewSet(
	{{range .Repositories}}repository.New{{.Name}}
	{{end}}
)

type UseCases struct {
	{{range .UseCases}}{{.Name}}
	{{end}}
}

//lint:ignore U1000 used by wire
var UseCaseSet = wire.NewSet(
	{{range .UseCases}}usecase.New{{.Name}}
	{{end}}
)

type Handlers struct {
	{{range .Handlers}}*handler.{{.}}
	{{end}}
}

//lint:ignore U1000 used by wire
var HandlerSet = wire.NewSet(
	{{range .Handlers}}handler.New{{.}}
	{{end}}
)
